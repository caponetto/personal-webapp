{
  "include": ["src"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "lib": ["ES5", "DOM"],
    "target": "ES6",
    "module": "es2020",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true
  }
}
