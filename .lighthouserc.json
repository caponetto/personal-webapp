{
  "ci": {
    "collect": {
      "startServerCommand": "npm run start:lighthouse",
      "startServerReadyPattern": "Loopback: https://127.0.0.1:9000/",
      "startServerReadyTimeout": 120000,
      "url": [
        "https://127.0.0.1:9000/#/about",
        "https://127.0.0.1:9000/#/journey",
        "https://127.0.0.1:9000/#/text",
        "https://127.0.0.1:9000/#/talk",
        "https://127.0.0.1:9000/#/code"
      ],
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": "--headless=new --no-sandbox --disable-dev-shm-usage --ignore-certificate-errors --allow-insecure-localhost"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.8 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["warn", { "minScore": 0.9 }],
        "categories:seo": ["warn", { "minScore": 0.9 }]
      }
    }
  }
}
